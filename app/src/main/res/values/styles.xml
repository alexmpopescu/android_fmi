<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarItemBackground">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/colorSecondary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimaryInverse">@color/colorText</item>
        <item name="android:colorForegroundInverse">@color/colorText</item>
    </style>

    <style name="AppTheme.Tabs" parent="AppTheme">
        <item name="android:actionBarItemBackground">@color/colorPrimaryDark</item>
    </style>

</resources>
